<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuessMyName.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="12" CornerRadius="0">
            <Label Text="Welcome to Guess My Name!" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
        </Frame>
        <Entry x:Name="searchEntry" Placeholder="Name" />
        <Button x:Name="searchButton" Text="Search" />
        <Label x:Name="resultLabel" Text="" Margin="20" TextColor="#000000" FontSize="Small" LineHeight="2" />
    </StackLayout>

</ContentPage>
