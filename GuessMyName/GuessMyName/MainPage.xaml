<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuessMyName.MainPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="12" CornerRadius="0">
            <Label x:Name="headerLabel" Text="" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
        </Frame>
        <Label x:Name="promptLabel" Text="" Margin="20" TextColor="#2196f3" FontSize="Medium" />
        <Entry x:Name="nameEntry" Placeholder="" />
        <Button x:Name="confirmButton" Text="Confirm" />
        <Image Source="noob.png" HorizontalOptions="Center" HeightRequest="150" />
        <Button x:Name="switchButton" Text="" TextColor="#2196F3" FontAttributes="Bold"
                HorizontalOptions="FillAndExpand" BackgroundColor="#B9E6FF" VerticalOptions="EndAndExpand" />
    </StackLayout>
</ContentPage>
