<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GuessMyName.FinishPage">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand">
        <Label Text="Congratulations!" HorizontalOptions="Center" HorizontalTextAlignment="Center"
               FontSize="Medium" TextColor="#2196F3" />
        <Label Text="Your guess is correct!" HorizontalOptions="Center" HorizontalTextAlignment="Center"
               FontSize="Medium" TextColor="#2196F3" />
        <Button x:Name="mainButton" Text="Main Menu" HorizontalOptions="CenterAndExpand"
                TextColor="#FFFFFF" BackgroundColor="#83B459" />
        <Button x:Name="logoutButton" Text="Sign Out" HorizontalOptions="Center"
                TextColor="#FFFFFF" BackgroundColor="#83B459" />
    </StackLayout>
</ContentPage>
